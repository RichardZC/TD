@model List<BE.persona>

<div id="email-list" class="col s12 m12 l12 card-panel z-depth-1">
    <ul class="collection">
        @{ int i = 0;}
        @foreach (var item in Model)
            {
                i++;
            <li class="collection-item avatar @if (i == 1) {<text>selected</text>}"
                ondblclick="MostrarEditar(@item.PersonaId);"
                onclick="$(this).addClass('selected').siblings().removeClass('selected');">
                <span class="circle light-blue">@item.NombreCompleto.Substring(0, 1)</span>
                <span class="email-title">@item.NombreCompleto</span>
                <p class="truncate grey-text ultra-small">@item.Correo</p>
                <a class="secondary-content email-time"><span class="blue-text ultra-small">DNI @item.DNI</span></a>
            </li>
        }
    </ul>

    <div class="fixed-action-btn" style="bottom: 50px; right: 19px;">
        <a class="btn btn-floating btn-large red" href='@Url.Action("Mantener","Persona",new { id=0 })'>
            <i class="mdi-social-person-add"></i>
        </a>
    </div>
</div>

